

<header>
    <div><h2>Eat-Da-Burger</h2></div>
</header>

<div class="grid-container">
    <div class="grid-item" id="first">
        <h2>Burgers Left to Devour:</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burgers-block devoured=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>



<div class="grid-item" id="second">
    <h2>Burgers that ARE eaten</h2>
    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burgers-block devoured=false}}
            {{/if}}
        {{/each}}
    </ul>

</div>

</div>

<div class="grid-item" id="third">
    <h2>Add a Burger</h2>
    <form class="create-form" action="/" method="POST">
        <div class="form-group">
            <label for="bur">Burger Name: </label>
            <input type="text" id="bur" name="name">
        </div>

        <div class="form-group">
            <label for="devoured">Been devoured?</label><br>
            <input class="radbtn" type="radio" name="devoured" value="1" checked>Yes!!
            <input class="radbtn" type="radio" name="devoured" value="0">Not yet.
        </div>

        <button class="button-style" type="submit"> Add Burger Yum </button>
    </form>




</div>















